<section class="ui raised segment">
    <div class="ui grid ">
        <div class="ui form six wide column">
            <div class="ui stacked segment">
                <!-- from to allow user to input data and image -->
                <form action="/poi" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="poi" >
                    <div class="field">
                        <label>Venue Name</label>
                        <input type="text" name="name" >
                    </div>

                    <div class="field">
                        <label>Describe the Music & Food at your POI</label>
                        <input type="text" rows="2" name="description" value>
                    </div>


            <div class="grouped fields">
                <label for="category">Category:</label>
                <div class="field">
                    <div class="ui radio checkbox">
                        <input type="radio" name="category" value="bar" checked="" tabindex="0" class="hidden">
                        <label>Bar</label>
                    </div>
                </div>
                <div class="field">
                    <div class="ui radio checkbox">
                        <input type="radio" name="category" value="restaurant" tabindex="0" class="hidden">
                        <label>Restaurant</label>
                    </div>
                </div>
                <div class="field">
                    <div class="ui radio checkbox">
                        <input type="radio" name="category" value="Coffee Shop" tabindex="0" class="hidden">
                        <label>Coffee Shop</label>
                    </div>
                </div>
                <div class="field">
                    <div class="ui radio checkbox">
                        <input type="radio" name="category" value="Nightclub" tabindex="0" class="hidden">
                        <label>Nightclub</label>
                    </div>
                </div>
                <div class="field">
                    <div class="ui radio checkbox">
                        <input type="radio" name="category" value="hotel" tabindex="0" class="hidden">
                        <label>Hotel</label>
                    </div>
                </div>
            </div>

            <div class="ui header">Geo Location</div>
                <div class="ui two fields">
                    <div class="field">
                        <div class="ui text box">
                            <label>Longitude </label>
                            <input type="text" id="long" name="long" placeholder="0.000000" accept="integer/*" >
                        </div>
                    </div>


                    <div class="field">
                        <div class="ui text box">
                            <label>Latitude </label>
                            <input type="text" id="lat" name="lat" placeholder="-0.000000" accept="integer/*" >
                        </div>
                    </div>
            </div>


                    <div class="grouped inline fields">
                                           </div>
                    <input type="file" id="image" name="image" accept="image/png, image/jpeg" required>


                    <div class="ui raised segment">
                        <button class="medium ui blue submit button"><i class = "thumbtack icon "> </i>Create POI</button>
                    </div>

                </form>
           </div>
        </div>

